{
    "ID":"LearnNonstationaryCos",
    "module":"ModularExperiment",
    "nrD":1200,
    "rSeed":12345,
    "modules":[
        {
            "ID":"DataProviderX",
            "collection":"Distribution",
            "module":"uniform",
            "domain":[-1,1]
        },
        {
            "ID":"DataProviderY",
            "module":"Group",
            "input":
            {
                "argIn":"DataProviderX"
            },
            "modules":[
                {
                    "ID":"CosFreq",
                    "path":"Benchmark",
                    "module":"SignalBuilder",
                    "segments":[
                        {"duration":400, "kind":"constant", "value":3.14},
                        {"duration":400, "kind":"linear",   "start":3.14,"final":6.28},
                        {"duration":400, "kind":"constant", "value":6.28}
                    ]
                },
                {
                    "ID":"TargetFunction",
                    "path":"Benchmark",
                    "collection":"TargetFunction",
                    "module":"cosine",
                    "input":
                    {
                        "x":"argIn",
                        "freq":"CosFreq"
                    }
                }
            ]
        },
        {
            "ID":"Noise",
            "collection":"AddNoise",
            "module":"gaussian",
            "std":0.1,
            "input":
            {
                "value":"DataProviderY"
            }
        },
        {
            "ID":"LearnSys",
            "path":"IncrementalLearning",
            "collection":"IncrementalLearningSystem",
            "module":"CompoundLearningSystem",
            "approximator":
            {
                "kind":"TensorExpansion",
                "inputs":[
                            {"kind":"RBF",
                             "nodes":[-1,-0.5,0,0.5,1],
                             "widths":[0.5,0.5,0.5,0.5,0.5]}
                         ]
            },
            "learner":{"name":"PA"},
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"Noise"
            }
        },
        {
            "ID":"LearningHistory",
            "collection":"Plotting",
            "module":"plotLearningHistory",
            "samplingDomain":[-1,1],
            "samplingSize":101,
            "legend":"Training Data",
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"Noise",
                "ILS":"LearnSys",
                "GroundTruth":"DataProviderY"
            }
        }
    ]
}