{
    "ID":"LearnNonstationaryCos",
    "module":"ModularExperiment",
    "nrD":255,
    "rSeed":12345,
    "parameter":
        {
            "domain":[0,2],
            "nrLayer":4,
            "offset":0,
            "res":2
        },
    "modules":[
        {
            "ID":"DataProviderX",
            "collection":"Distribution",
            "module":"Uniform",
            "domain":"@domain",
            "size":[1]
        },
        {
            "ID":"DataProviderY",
            "module":"Group",
            "input":
            {
                "argIn":"DataProviderX"
            },
            "modules":[
                {
                    "ID":"CosFreq",
                    "path":"Benchmark",
                    "module":"SignalBuilder",
                    "segments":[
                        {"duration":4000, "kind":"constant", "value":3.14},
                        {"duration":400, "kind":"linear",   "start":3.14,"final":3.14},
                        {"duration":400, "kind":"constant", "value":3.14}
                    ]
                },
                {
                    "ID":"CosPhase",
                    "path":"Benchmark",
                    "module":"SignalBuilder",
                    "segments":[
                        {"duration":500, "kind":"constant", "value":3.14},
                        {"duration":500, "kind":"constant", "value":1.57}
                    ]
                },
                {
                    "ID":"TargetFunction",
                    "path":"Benchmark",
                    "collection":"TargetFunction",
                    "module":"Cosine",
                    "input":
                    {
                        "x":"argIn",
                        "freq":"CosFreq",
                        "phase":"CosPhase"
                    }
                },
                {
                    "ID":"Const",
                    "collection":"Basic",
                    "module":"Constant",
                    "value":0.0
                },
                {
                    "ID":"Sum",
                    "collection":"Basic",
                    "module":"Summation",
                    "input":
                    {
                        "x1":"TargetFunction",
                        "x2":"Const"
                    }
                }
            ]
        },
        {
            "ID":"Noise",
            "collection":"AddNoise",
            "module":"Uniform",
            "range":0.1,
            "input":
            {
                "value":"DataProviderY"
            }
        },
        {
            "ID":"LearnSys1",
            "path":"IncrementalLearning",
            "collection":"IncrementalLearningSystem",
            "module":"LayeredSimplexTesselationCubicInterpolation",
            "delta":0.1,
            "res":"@res",
            "offset":"@offset",
            "maxNrLayer":"@nrLayer",
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"Noise"
            }
        },
        {
            "ID":"LearnSys2",
            "path":"IncrementalLearning",
            "collection":"IncrementalLearningSystem",
            "module":"AdaptiveCubicSimplicialBSpline",
            "approximator":
            {
                "kind":"AdaptiveCubicSimplicialBSpline",
                "inputs":[{"kind":"UIGLTlinear","res":0.125}]
            },
            "learner":{"name":"LRLS"},
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"Noise"
            }
        },
        {
            "ID":"LearnSys3",
            "path":"IncrementalLearning",
            "collection":"IncrementalLearningSystem",
            "module":"MRSTCubicInterpolation",
            "nrLayer":"@nrLayer",
            "offset":"@offset",
            "res":"@res",
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"Noise"
            }
        },
        {
            "ID":"CL_LearnSys1",
            "collection":"PerformanceEvaluation",
            "module":"CumulativeLoss",
            "input":
            {
                "target":"Noise",
                "prediction":"LearnSys1"
            }
        },
        {
            "ID":"CL_LearnSys2",
            "collection":"PerformanceEvaluation",
            "module":"CumulativeLoss",
            "input":
            {
                "target":"Noise",
                "prediction":"LearnSys2"
            }
        },
        {
            "ID":"CL_LearnSys3",
            "collection":"PerformanceEvaluation",
            "module":"CumulativeLoss",
            "input":
            {
                "target":"Noise",
                "prediction":"LearnSys3"
            }
        },
        {
            "ID":"PlotCL",
            "collection":"Plotting",
            "module":"PlotVsTime",
            "label":["Time","CL"],
            "input":
            {
                "Layered":"CL_LearnSys1",
                "FixRes":"CL_LearnSys2",
                "MultiRes":"CL_LearnSys3"
            }
        },
        {
            "ID":"LearningHistory1",
            "collection":"Plotting",
            "module":"PlotLayerLearningHistory",
            "samplingDomain":"@domain",
            "samplingSize":101,
            "legend":"Training Data",
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"DataProviderY",
                "ILS":"LearnSys1",
                "GroundTruth":"DataProviderY"
            }
        },
        {
            "ID":"LearningHistory2",
            "collection":"Plotting",
            "module":"PlotLearningHistory",
            "samplingDomain":"@domain",
            "samplingSize":101,
            "legend":"Training Data",
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"DataProviderY",
                "ILS":"LearnSys2",
                "GroundTruth":"DataProviderY"
            }
        },
        {
            "ID":"LearningHistory3",
            "collection":"Plotting",
            "module":"PlotLayerLearningHistory",
            "samplingDomain":"@domain",
            "samplingSize":101,
            "legend":"Training Data",
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"DataProviderY",
                "ILS":"LearnSys3",
                "GroundTruth":"DataProviderY"
            }
        }
    ]
}