{
    "ID":"LearnNonstationaryCos",
    "module":"ModularExperiment",
    "nrD":2000,
    "rSeed":12345,
    "parameter":
        {
            "domain":[1,3],
            "nrLayer":4,
            "offset":1,
            "res":2
        },
    "modules":[
        {
            "ID":"DataProviderX",
            "collection":"Distribution",
            "module":"Uniform",
            "domain":"@domain",
            "size":[1]
        },
        {
            "ID":"DataProviderY",
            "module":"Group",
            "input":
            {
                "argIn":"DataProviderX"
            },
            "modules":[
                {
                    "ID":"CosFreq",
                    "path":"Benchmark",
                    "module":"SignalBuilder",
                    "segments":[
                        {"duration":1000, "kind":"constant", "value":3.14},
                        {"duration":500, "kind":"linear",   "start":3.14,"final":6.28},
                        {"duration":500, "kind":"constant", "value":6.28}
                    ]
                },
                {
                    "ID":"TargetFunction",
                    "path":"Benchmark",
                    "collection":"TargetFunction",
                    "module":"Cosine",
                    "input":
                    {
                        "x":"argIn",
                        "freq":"CosFreq"
                    }
                }
            ]
        },
        {
            "ID":"Noise",
            "collection":"AddNoise",
            "module":"Uniform",
            "range":0.1,
            "input":
            {
                "value":"DataProviderY"
            }
        },
        {
            "ID":"LearnSys",
            "path":"IncrementalLearning",
            "collection":"IncrementalLearningSystem",
            "module":"AdaptiveLinearSimplicialBSpline",
            "approximator":
            {
                "kind":"AdaptiveLinearSimplicialBSpline",
                "inputs":[{"kind":"UIGLTlinear","res":0.1}]
            },
            "learner":{"name":"vSGD"},
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"Noise"
            }
        },
        {
            "ID":"LearningHistory",
            "collection":"Plotting",
            "module":"PlotLearningHistory",
            "samplingDomain":"@domain",
            "samplingSize":101,
            "legend":"Training Data",
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"Noise",
                "ILS":"LearnSys",
                "GroundTruth":"DataProviderY"
            }
        }
    ]
}