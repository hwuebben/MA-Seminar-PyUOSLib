{
    "ID":"LearnNonstationaryCos",
    "module":"ModularExperiment",
    "nrD":1000,
    "rSeed":12345,
    "parameter":
        {
            "domain":[-1,1],
            "nrLayer":5,
            "offset":-1,
            "res":8
        },
    "modules":[
        {
            "ID":"DataProviderX",
            "collection":"Distribution",
            "module":"Uniform",
            "domain":"@domain",
            "size":[10]
        },
        {
            "ID":"DataProviderY",
            "path":"Benchmark",
            "collection":"TargetFunction",
            "module":"Cosine",
            "input":
            {
                "x":"DataProviderX"
            }
        },
        {
            "ID":"Noise",
            "collection":"AddNoise",
            "module":"Uniform",
