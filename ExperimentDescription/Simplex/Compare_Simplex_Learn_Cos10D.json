            "input":
            {
                "value":"DataProviderY"
            }
        },
        {
            "ID":"LearnSys1",
            "path":"IncrementalLearning",
            "collection":"IncrementalLearningSystem",
            "module":"LayeredSimplexTesselationCubicInterpolation",
            "delta":0.1,
            "res":"@res",
            "offset":"@offset",
            "maxNrLayer":"@nrLayer",
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"Noise"
            }
        },
        {
            "ID":"LearnSys2",
            "path":"IncrementalLearning",
            "collection":"IncrementalLearningSystem",
            "module":"AdaptiveCubicSimplicialBSpline",
            "approximator":
            {
                "kind":"AdaptiveCubicSimplicialBSpline",
                "inputs":[{"kind":"UIGLTlinear","res":0.125},{"kind":"UIGLTlinear","res":0.125},{"kind":"UIGLTlinear","res":0.125},{"kind":"UIGLTlinear","res":0.125},{"kind":"UIGLTlinear","res":0.125},{"kind":"UIGLTlinear","res":0.125},{"kind":"UIGLTlinear","res":0.125},{"kind":"UIGLTlinear","res":0.125},{"kind":"UIGLTlinear","res":0.125},{"kind":"UIGLTlinear","res":0.125}]
            },
            "learner":{"name":"LRLS"},
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"Noise"
            }
        },
        {
            "ID":"LearnSys3",
            "path":"IncrementalLearning",
            "collection":"IncrementalLearningSystem",
            "module":"MRSTCubicInterpolation",
            "nrLayer":"@nrLayer",
            "offset":"@offset",
            "res":"@res",
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"Noise"
            }
        },
        {
            "ID":"CL_LearnSys1",
            "collection":"PerformanceEvaluation",
            "module":"CumulativeLoss",
            "input":
            {
                "target":"Noise",
                "prediction":"LearnSys1"
            }
        },
        {
            "ID":"CL_LearnSys2",
            "collection":"PerformanceEvaluation",
            "module":"CumulativeLoss",
            "input":
            {
                "target":"Noise",
                "prediction":"LearnSys2"
            }
        },
        {
            "ID":"CL_LearnSys3",
            "collection":"PerformanceEvaluation",
            "module":"CumulativeLoss",
            "input":
            {
                "target":"Noise",
                "prediction":"LearnSys3"
            }
        },
        {
            "ID":"PlotCL",
            "collection":"Plotting",
            "module":"PlotVsTime",
            "label":["Time","CL"],
            "input":
            {
                "Layered":"CL_LearnSys1",
                "FixRes":"CL_LearnSys2",
                "MultiRes":"CL_LearnSys3"
            }
        }
    ]
}