{
    "ID":"LearnNonstationaryCos",
    "module":"ModularExperiment",
    "nrD":1000,
    "rSeed":12345,
    "modules":[
        {
            "ID":"DataProviderX",
            "collection":"Distribution",
            "module":"uniform",
            "domain":[-1,1],
            "size":[1]
        },
        {
            "ID":"DataProviderY",
            "module":"Group",
            "input":
            {
                "argIn":"DataProviderX"
            },
            "modules":[
                {
                    "ID":"GaussWidth",
                    "path":"Benchmark",
                    "module":"SignalBuilder",
                    "segments":[
                        {"duration":4000, "kind":"constant", "value":0.2}
                    ]
                },
                {
                    "ID":"TargetFunction",
                    "path":"Benchmark",
                    "collection":"TargetFunction",
                    "module":"gauss",
                    "input":
                    {
                        "x":"argIn",
                        "width":"GaussWidth"
                    }
                }
            ]
        },
        {
            "ID":"Noise",
            "collection":"AddNoise",
            "module":"uniform",
            "range":0.1,
            "input":
            {
                "value":"DataProviderY"
            }
        },
        {
            "ID":"LearnSys",
            "path":"IncrementalLearning",
            "collection":"IncrementalLearningSystem",
            "module":"LocalRefinementSimplexTesselationCubicInterpolation",
            "delta":0.1,
            "res":2,
            "offset":-1,
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"Noise"
            }
        },
        {
            "ID":"LearningHistory",
            "collection":"Plotting",
            "module":"plotLayerLearningHistory",
            "samplingDomain":[-1,1],
            "samplingSize":101,
            "legend":"Training Data",
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"Noise",
                "ILS":"LearnSys",
                "GroundTruth":"DataProviderY"
            }
        }
    ]
}