{
    "ID":"LearnNonstationaryCos",
    "module":"ModularExperiment",
    "nrD":1000,
    "rSeed":12345,
    "modules":[
        {
            "ID":"DataProviderX",
            "collection":"Distribution",
            "module":"uniform",
            "domain":[-1,1],
            "size":[2]
        },
        {
            "ID":"DataProviderY",
            "module":"Group",
            "input":
            {
                "argIn":"DataProviderX"
            },
            "modules":[
                {
                    "ID":"CosFreq",
                    "path":"Benchmark",
                    "module":"SignalBuilder",
                    "segments":[
                        {"duration":400, "kind":"constant", "value":3.14},
                        {"duration":400, "kind":"linear",   "start":3.14,"final":6.28},
                        {"duration":400, "kind":"constant", "value":6.28}
                    ]
                },
                {
                    "ID":"TargetFunction",
                    "path":"Benchmark",
                    "collection":"TargetFunction",
                    "module":"cosine",
                    "input":
                    {
                        "x":"argIn",
                        "freq":"CosFreq"
                    }
                }
            ]
        },
        {
            "ID":"LearnSys",
            "path":"IncrementalLearning",
            "collection":"IncrementalLearningSystem",
            "module":"SparseCompoundLearningSystem",
            "approximator":
            {
                "kind":"LinearSimplicialBSpline",
                "inputs":[{"kind":"GLTlinear","nodes":[-1,-0.75,-0.5,-0.25,0,0.25,0.5,0.75,1]},{"kind":"GLTlinear","nodes":[-1,-0.75,-0.5,-0.25,0,0.25,0.5,0.75,1]}]
            },
            "learner":{"name":"LRLS"},
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"DataProviderY"
            }
        },
        {
            "ID":"LearningHistory",
            "collection":"Plotting",
            "module":"plotLearningHistory",
            "samplingDomain":[[-1,1],[-1,1]],
            "samplingSize":1000,
            "legend":"Training Data",
            "input":
            {
                "xLearn":"DataProviderX",
                "yLearn":"DataProviderY",
                "ILS":"LearnSys",
                "GroundTruth":"DataProviderY"
            }
        }
    ]
}