{
	"ID":"Tutorial_Step_1_Sine",
    "nrD":300,
    "rSeed":12345,
    "modules":[
        {
            "ID":"InstanceGenerator",
            "collection":"Distribution",
            "module":"Uniform"
        },
        {
            "ID":"InstanceLabeling",
            "path":"Benchmark",
            "collection":"TargetFunction",
            "module":"Sine",
            "input":
            {
                "x":"InstanceGenerator"
            }
        },
        {
            "ID":"Noise",
            "collection":"AddNoise",
            "module":"Gaussian",
            "std":0.1,
            "input":
            {
