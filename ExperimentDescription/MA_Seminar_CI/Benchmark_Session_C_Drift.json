{
    "ID":"BechmarkSuiteB",
    "module":"ModularExperiment",
    "simulationSteps":"ParamIterator",
    "rSeed":12345,
    "parameter":
    {
        "domain":[0,2]
    },
    "modules":[
        {
            "ID":"ParamIterator",
            "collection":"Iterator",
            "module":"MultiArray",
            "array":["np.linspace(0,1,11)","np.linspace(0,1.0,11)"]
        },
        {
            "ID":"NoiseLevel",
            "collection":"Basic",
            "module":"BusSelector",
            "index":0,
            "input":
            {
                "x":"ParamIterator"
            }
        },
        {
            "ID":"ShiftLevel",
            "collection":"Basic",
            "module":"BusSelector",
            "index":1,
            "input":
            {
                "x":"ParamIterator"
            }
        },
        {
            "ID":"BenchmarkExperiment",
            "module":"ModularExperiment",
            "simulationSteps":"DataProviderY",
            "rSeed":12345,
            "input":
            {
                "NoiseLevel":"NoiseLevel",
                "ShiftLevel":"ShiftLevel"
            },
            "modules":[
                {
                    "ID":"DataProviderX",
                    "collection":"Distribution",
                    "module":"Uniform",
                    "domain":"@domain",
                    "size":[1]
                },
                {
                    "ID":"DataProviderY",
                    "module":"Group",
                    "input":
                    {
                        "argIn":"DataProviderX",
                        "ShiftLevel":"ShiftLevel"
                    },
                    "modules":[
                        {
                            "ID":"Offset",
                            "path":"Benchmark",
                            "module":"SignalBuilder",
                            "segments":[{"duration":300,"kind":"constant","value":0.0},
                                        {"duration":300,"kind":"linear","start":0.0, "final":1.0},
                                        {"duration":300,"kind":"constant","value":1.0}]
                        },
                        {
                            "ID":"OffsetScale",
                            "collection":"Basic",
                            "module":"Product",
                            "input":
                            {
                                "x0":"Offset",
                                "x1":"ShiftLevel"
                            }
                        },
                        {
                            "ID":"Cosine",
                            "path":"Benchmark",
                            "collection":"TargetFunction",
                            "module":"Cosine",
                            "freq":3.14,
                            "input":
                            {
                                "x":"argIn"
                            }
                        },
                        {
                            "ID":"Shift",
                            "collection":"Basic",
                            "module":"Summation",
                            "input":
                            {
                                "x0":"OffsetScale",
                                "x1":"Cosine"
                            }
                        }
                    ]
                },
                {
                    "ID":"Noise",
                    "collection":"AddNoise",
                    "module":"Uniform",
                    "width":0.1,
                    "input":
                    {
                        "value":"DataProviderY",
                        "width":"NoiseLevel"
                    }
                },
                {
                    "ID":"LearnSys",
                    "path":"IncrementalLearning",
                    "collection":"IncrementalLearningSystem",
                    "module":"AdaptiveLinearSimplicialBSpline",
                    "approximator":
                    {
                        "kind":"AdaptiveLinearSimplicialBSpline",
                        "inputs":[{"kind":"UIGLTlinear","res":0.1}]
                    },
                    "learner":{"name":"vSGD"},
                    "input":
                    {
                        "xLearn":"DataProviderX",
                        "yLearn":"Noise"
                    }
                },
                {
                    "ID":"CL_ground_truth",
                    "collection":"PerformanceEvaluation",
                    "module":"CumulativeLoss",
                    "measure":"absolute",
                    "input":
                    {
                        "target":"DataProviderY",
                        "prediction":"LearnSys"
                    }
                }
            ]
        },
        {
            "ID":"Plot",
            "collection":"Plotting",
            "module":"PlotScatter3D",
            "skipInit":1,
            "zlim":[0,450],
            "input":
            {
                "x":"ParamIterator",
                "y":"BenchmarkExperiment"
            }
        }
    ]
}