{
    "ID":"BechmarkSuiteB1",
    "module":"ModularExperiment",
    "simulationSteps":"Shift",
    "rSeed":12345,
    "parameter":
    {
        "domain":[0,2]
    },
    "modules":[
        {
            "ID":"TestSignal",
            "path":"Benchmark",
            "collection":"TestSignal",
            "module":"APRBS",
            "width":3,
            "domain":[-2,2]
        },
        {
            "ID":"Shift",
            "path":"Benchmark",
            "module":"SignalBuilder",
            "segments":[{"duration":3000,"kind":"constant","value":1.0},
                        {"duration":3000,"kind":"constant","value":0.1}]
        },
        {
            "ID":"Process",
            "path":"Benchmark",
            "collection":"DynamicProcess",
            "module":"Example3",
            "input":
            {
                "u":"TestSignal",
                "a0":"Shift"
            }
        },
        {
            "ID":"Noise",
            "collection":"AddNoise",
            "module":"Uniform",
            "width":0.02,
            "input":
            {
                "value":"Process"
            }
        },
        {
            "ID":"StateDelay1",
            "collection":"Basic",
            "module":"UnitDelay",
            "input":
            {
                "value":"Noise"
            }
        },
        {
            "ID":"DataX",
            "collection":"Basic",
            "module":"BusCreator",
            "input":
            {
                "x0":"StateDelay1",
                "x1":"TestSignal"
            }
        },
        {
            "ID":"LearnSys",
            "path":"IncrementalLearning",
            "collection":"IncrementalLearningSystem",
            "module":"AdaptiveLinearSimplicialBSpline",
            "approximator":
            {
                "kind":"AdaptiveLinearSimplicialBSpline",
                "inputs":[{"kind":"UIGLTlinear","res":0.1},
                          {"kind":"UIGLTlinear","res":1.0}]
            },
            "learner":{"name":"vSGD"},
            "input":
            {
                "xLearn":"DataX",
                "yLearn":"Noise"
            }
        },
        {
            "ID":"CL_ground_truth",
            "collection":"PerformanceEvaluation",
            "module":"CumulativeLoss",
            "measure":"absolute",
            "input":
            {
                "target":"Process",
                "prediction":"LearnSys"
            }
        },
        {
            "ID":"CL_steady_predict",
            "collection":"PerformanceEvaluation",
            "module":"CumulativeLoss",
            "measure":"absolute",
            "input":
            {
                "target":"Process",
                "prediction":"StateDelay1"
            }
        },
        {
            "ID":"Plot",
            "collection":"Plotting",
            "module":"PlotVsTime",
            "input":
            {
                "CL_predict":"CL_ground_truth",
                "CL_steady":"CL_steady_predict"
            }
        }
    ]
}
