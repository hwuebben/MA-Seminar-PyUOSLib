{
    "ID":"BechmarkSuiteB4",
    "module":"ModularExperiment",
    "simulationSteps":10000,
    "rSeed":12345,
    "parameter":
    {
        "domain":[0,2]
    },
    "modules":[
        {
            "ID":"TestSignal",
            "path":"Benchmark",
            "collection":"TestSignal",
            "module":"APRBS",
            "width":3,
            "domain":[-2,2]
        },
        {
            "ID":"Process",
            "path":"Benchmark",
            "collection":"DynamicProcess",
            "module":"Example2",
            "input":
            {
                "u":"TestSignal"
            }
        },
        {
            "ID":"Noise",
            "collection":"AddNoise",
            "module":"Uniform",
            "width":0.02,
            "input":
            {
                "value":"Process"
            }
        },
        {
            "ID":"StateDelay1",
            "collection":"Basic",
            "module":"UnitDelay",
            "input":
            {
                "value":"Noise"
            }
        },
        {
            "ID":"StateDelay2",
            "collection":"Basic",
            "module":"UnitDelay",
            "input":
            {
                "value":"StateDelay1"
            }
        },
        {
            "ID":"StateDelay3",
            "collection":"Basic",
            "module":"UnitDelay",
            "input":
            {
                "value":"StateDelay2"
            }
        },
        {
            "ID":"SignalDelay",
            "collection":"Basic",
            "module":"UnitDelay",
            "input":
            {
                "value":"TestSignal"
            }
        },
        {
            "ID":"DataX",
            "collection":"Basic",
            "module":"BusCreator",
            "input":
            {
                "x0":"StateDelay1",
                "x1":"StateDelay2",
                "x2":"StateDelay3",
                "x3":"TestSignal",
                "x4":"SignalDelay"
            }
        },
        {
            "ID":"LearnSys",
            "path":"IncrementalLearning",
            "collection":"IncrementalLearningSystem",
            "module":"AdaptiveLinearSimplicialBSpline",
            "approximator":
            {
                "kind":"AdaptiveLinearSimplicialBSpline",
                "inputs":[{"kind":"UIGLTlinear","res":0.5},
                          {"kind":"UIGLTlinear","res":0.5},
                          {"kind":"UIGLTlinear","res":0.5},
                          {"kind":"UIGLTlinear","res":0.5},
                          {"kind":"UIGLTlinear","res":0.5}]
            },
            "learner":{"name":"vSGD"},
            "input":
            {
                "xLearn":"DataX",
                "yLearn":"Noise"
            }
        },
        {
            "ID":"CL_ground_truth",
            "collection":"PerformanceEvaluation",
            "module":"CumulativeLoss",
            "measure":"absolute",
            "input":
            {
                "target":"Process",
                "prediction":"LearnSys"
            }
        },
        {
            "ID":"CL_steady_predict",
            "collection":"PerformanceEvaluation",
            "module":"CumulativeLoss",
            "measure":"absolute",
            "input":
            {
                "target":"Process",
                "prediction":"StateDelay1"
            }
        },
        {
            "ID":"Plot",
            "collection":"Plotting",
            "module":"PlotVsTime",
            "input":
            {
                "CL_predict":"CL_ground_truth",
                "CL_steady":"CL_steady_predict"
            }
        }
    ]
}
