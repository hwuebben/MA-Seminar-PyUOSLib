{
    "ID":"SimpleBicycleSimulation",
    "module":"ModularExperiment",
    "nrD":1000,
    "rSeed":12345,
    "modules":[      
        {
            "ID":"Localization",
            "path":"AckermannSteering",
            "collection":"Trajectory",
            "module":"Localization",
            "points":[[0,0],[50,0]],
            "lookAhead":0.5,
            "input":
            {
                "pose":"PosEstimate"
            }
        },
        {
            "ID":"PlotDriver",
            "path":"AckermannSteering",
            "collection":"Plotting",
            "module":"PlotBicycleModel",
            "trackLength":315,
            "input":
            {
                "car":"CarSim",
                "track":"Localization",
                "estimate":"PosEstimate"
            }
        },
        {
            "ID":"Controller",
            "path":"AckermannSteering",
            "collection":"Control",
            "module":"PPA",
            "carLength":2,
            "input":
            {
                "error":"Localization"
            }
        },
        {
            "ID":"CarSim",
            "path":"AckermannSteering",
            "collection":"Simulation",
            "module":"BicycleModel",
            "vel":0.5,
            "carLength":2,
            "input":
            {
                "steering":"Controller"
            }
        },
        {
            "ID":"PosDelay",
            "collection":"Basic",
            "module":"kDelay",
            "delay":1,
            "input":
            {
                "value":"CarSim"
            }
        },
        {
            "ID":"PosNoise",
            "collection":"AddNoise",
            "module":"Gaussian",
            "std":0.1,
            "input":
            {
                "value":"PosDelay"
            }
        },
        {
            "ID":"PosEstimate",
            "path":"AckermannSteering",
            "collection":"Filter",
            "module":"Kalman",
            "vel":0.5,
            "carLength":2,
            "delay":1,
            "input":
            {
                "state":"PosDelay",
                "steering":"Controller"
            }
        },
        {
            "ID":"CalcTrackingError",
            "path":"AckermannSteering",
            "collection":"Trajectory",
            "module":"TrackingError",
            "points":[[0,0],[50,0]],
            "input":
            {
                "car":"CarSim",
                "estimate":"PosEstimate"
            }
        },
        {
            "ID":"PlotTrackingError",
            "collection":"Plotting",
            "module":"Plot",
            "label":["Simulation Steps", "Tracking Error"],
            "input":
            {
                "y":"CalcTrackingError"
            }
        },
        {
            "ID":"CalcAverageTrackingError",
            "path":"AckermannSteering",
            "collection":"Trajectory",
            "module":"AverageTrackingError",
            "input":
            {
                "error":"CalcTrackingError"
            }
        }
    ]
}